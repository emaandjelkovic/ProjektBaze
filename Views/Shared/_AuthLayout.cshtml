<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AccountManager</title>

    <!-- Globalni stil (gradient + navbar) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Auth stil (kartica + slika + form) -->
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body>

    <!-- Shared navbar (mijenja se po roli) -->
    <partial name="_Navbar" />

    <!-- Auth stranice koristimo isti spacing ispod navbara -->
    <div class="page">
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
